<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center vh-85">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://img.freepik.com/free-photo/friends-setting-their-winter-camping-tent_23-2149228914.jpg?w=1060&t=st=1688112157~exp=1688112757~hmac=f1d1d3bb73a37360b24b1439076fd93602c07863ac7de1eb14cbcdac50d97af3"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block box-shadow-intense w-100">Register</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>